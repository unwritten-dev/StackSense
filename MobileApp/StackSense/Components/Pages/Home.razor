@page "/"

<div class="min-h-screen bg-slate-900 text-white p-6 font-sans"
     style="padding-top: calc(env(safe-area-inset-top) + 1rem);">
    <header class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-2xl font-bold bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent">
                StackSense
            </h1>
            <p class="text-slate-400 text-sm">Ab geht's</p>
        </div>
        <div class="h-10 w-10 bg-slate-800 rounded-full flex items-center justify-center border border-slate-700">
            <span class="text-blue-400 text-xs font-bold">NK</span>
        </div>
    </header>

    <div class="bg-slate-800 rounded-3xl p-6 border border-slate-700 shadow-xl mb-6">
        <div class="flex items-center justify-between mb-4">
            <span class="text-slate-400 uppercase text-xs tracking-widest font-semibold">Sensor Status</span>
            <div class="flex items-center">
                <div class="h-2 w-2 rounded-full @(IsConnected ? "bg-green-500 animate-pulse" : "bg-red-500") mr-2"></div>
                <span class="text-sm">@(IsConnected ? "Verbunden" : "Getrennt")</span>
            </div>
        </div>

        <h2 class="text-3xl font-bold mb-6">@(IsConnected ? "StackSense-01" : "Kein Sensor")</h2>

        @if (!IsConnected)
        {
            <button @onclick="StartScan"
                    class="w-full py-4 bg-blue-600 hover:bg-blue-500 transition-all rounded-2xl font-bold text-lg shadow-lg shadow-blue-900/20">
                Sensor suchen
            </button>
        }
    </div>

    <div class="grid grid-cols-2 gap-4">
        <div class="bg-slate-800 p-5 rounded-3xl border border-slate-700">
            <p class="text-slate-400 text-xs mb-1">Reps Total</p>
            <p class="text-2xl font-bold">128</p>
        </div>
        <div class="bg-slate-800 p-5 rounded-3xl border border-slate-700">
            <p class="text-slate-400 text-xs mb-1">Avg. Velocity</p>
            <p class="text-2xl font-bold text-purple-400">0.65 m/s</p>
        </div>
    </div>
</div>

@code {
    private bool IsConnected => false; 

    private async Task StartScan()
    {
       
    }
}