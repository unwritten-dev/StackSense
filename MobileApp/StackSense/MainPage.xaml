<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:StackSense"
             xmlns:components="clr-namespace:StackSense.Components"
             x:Class="StackSense.MainPage"
             BackgroundColor="#0f172a">

    <Grid RowDefinitions="Auto,*">
        <!-- SafeArea -->
        <BoxView Grid.Row="0" 
                 Color="#0f172a"
                 HeightRequest="{OnPlatform Android=24, iOS=44, Default=0}"/>

        <BlazorWebView Grid.Row="1" 
                       x:Name="blazorWebView" 
                       HostPage="wwwroot/index.html">
            <BlazorWebView.RootComponents>
                <RootComponent Selector="#app" ComponentType="{x:Type components:Routes}" />
            </BlazorWebView.RootComponents>
        </BlazorWebView>
    </Grid>

</ContentPage>